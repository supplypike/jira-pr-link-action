{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "files": {
    "ignore": ["dist/**", "lib/**", "node_modules/**", "coverage/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
